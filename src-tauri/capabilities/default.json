{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "binaries/vision-subtitle-extractor-mac",
          "sidecar": true,
          "args": true
        }
      ]
    },
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "binaries/vision-subtitle-extractor-mac",
          "sidecar": true,
          "args": true
        }
      ]
    },
    "shell:default",
    "dialog:default",
    "fs:default",
    "fs:allow-copy-file",
    "fs:allow-temp-read-recursive"
  ]
}